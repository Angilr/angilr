<div class="d-flex justify-content-between align-items-center">
  <h1 class="mb-3">Lĩnh vực</h1>
  <%= link_to 'Thêm', new_admin_field_path, class: 'btn btn-primary' %>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tên</th>
      <th scope="col">Số bài</th>
      <th scope="col">Ngày tạo</th>
    </tr>
  </thead>
  <tbody>
    <% @fields.each do |f| %>
      <tr>
        <th scope="row"><%= f.id %></th>
        <td><%= f.name %></td>
        <td><%= f.lessons_count %></td>
        <td><%= l f.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
