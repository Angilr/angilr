<div class="container">
  <%= image_tag 'logo', width: 150, class: "mx-auto d-block" %>
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <h2 class="text-center"><%= t('user.sign_up') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: "minh_ha", class: "form-control" %>
        </div>

        <div class="form-group">
          <div class="form-check form-check-inline">
            <%= f.radio_button :gender, "male", class: "form-check-input" %>
            <%= f.label :gender, "Male", value: "male", class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :gender, "female", class: "form-check-input" %>
            <%= f.label :gender, "Female", value: "female", class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :gender, "not_both", class: "form-check-input" %>
            <%= f.label :gender, "Not both", value: "not_both", class: "form-check-label" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :birthday %>
          <%= f.date_field :birthday, min: Date.today - 90.years, max: Date.today, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "C0m3w!thm3", "aria-describedby" => "passwordHelp", class: "form-control" %>
          <% if @minimum_password_length %>
            <small id="passwordHelp" class="form-text text-muted">Should be <%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "C0m3w!thm3", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>
