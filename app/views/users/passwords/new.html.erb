<div class="container">
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <%= image_tag 'logo', width: 150, class: "mx-auto d-block" %>
      <h2 class="text-center"><%= t('user.forgot_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, placeholder: "Email của bạn", autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions text-center mb-2">
          <%= f.submit t('user.send_reset_password'), class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= render "users/shared/links" %>
      </div>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>

